@{
    ViewData["Title"] = "Login";
}
<div class="inner-wrapper flex flex-full-center flex-dc">
    <h1 class="title title--primary">Nethloader Login</h1>
    <div class="content-card content-card--w500">
        <form action="">
            <div class="form-row flex flex-dc flex-main-center">
                <input id="username" type="text" class="input input--text" data-type="text" required>
                <label for="username" class="label--itext">Username</label>
            </div>
            <div class="form-row flex flex-dc flex-main-center">
                <input id="password" type="password" class="input input--password" data-type="password" required>
                <label for="password" class="label--itext">Password</label>
            </div>
            <div class="form-row flex flex-cross-center flex-sa">
                <button class="button button--dark button--fancy pointer ta-c">Log In</button>
                <span class="flex flex-full-center">
                    <input id="remember_me" class="input input--checkbox" type="checkbox">
                    <label for="remember_me" class="label--checkbox"><small>Keep me logged in</small></label>
                </span>     
            </div>
        </form>
        <h4 class="title title--secondary-margin ta-c"><a href="#"><small>Don't have an account? Click here!</small></a></h4>
    </div>
</div>
