@{
    ViewData["Title"] = "Login";
}
<div class="inner-wrapper flex flex-full-center flex-dc">
    <h1 class="title title--primary">Nethloader Login</h1>
    <div class="content-card content-card--w500">
        <form action="">
            <div class="form-row flex flex-dc flex-main-center">
                <input id="username" type="text" class="input input--text" data-type="text" required>
                <label for="username" class="input-label">Username</label>
            </div>
            <div class="form-row flex flex-dc flex-main-center">
                <input id="password" type="password" class="input input--password" data-type="password" required>
                <label for="password" class="input-label">Password</label>
            </div>
            <div class="form-row flex flex-full-center">
                <button class="button button--dark button--fancy pointer">Login</button>
            </div>
         </form>
    </div>
</div>
